<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>steelarvin</name>
	<creationDate>Esfand 99</creationDate>
	<author>Khashayar Pouradabi</author>
	<authorEmail>pouradaby@gmail.com</authorEmail>
	<authorUrl>www.netparsi.com</authorUrl>
	<copyright>Copyright (C) 2005 - 2019 Open Source Matters, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.0</version>
	<files>
		<folder>css</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>font</folder>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="presetcolor" type="color" label="TPL_ARVIN_PRESETCOLOR" />
			</fieldset>
			<fieldset name="contact" label="TPL_ARVIN_CONTACT">
				<field name="email" type="text" label="TPL_ARVIN_EMAIL" />
				<field name="cellphone" type="text" label="TPL_ARVIN_CELLPHONE" />
				<field name="phone" type="textarea" label="TPL_ARVIN_PHONE" />
				<field name="fax" type="textarea" label="TPL_ARVIN_FAX" />
				<field name="addressfa" type="textarea" label="TPL_ARVIN_ADDRESS_FA" />
				<field name="addressen" type="textarea" label="TPL_ARVIN_ADDRESS_EN" />
				<field name="socials" type="repeatable" icon="list" label="TPL_ARVIN_SOCIALS">
					<fieldset hidden="true" name="slides" repeat="true">
						<field name="icon" class="width-100" type="text" label="TPL_ARVIN_ICON" />
						<field name="link" type="text" label="TPL_ARVIN_URL" />
						<field name="title" type="text" label="TPL_ARVIN_TITLE" />
					</fieldset>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>